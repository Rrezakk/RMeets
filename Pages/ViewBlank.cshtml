@page
@using System.Diagnostics
@model RMeets.Pages.ViewBlank
@{
    Layout = null;
}
@{
    Debug.WriteLine($"View for: {Model.blankId}");
    var blank = Model.ApplicationContext.Blanks.FirstOrDefault(x => x.Id == Model.blankId);
    Debug.WriteLine($"Blank: {blank}");
    var viewProfileId = blank?.ProfileId;
    var profile = Model.ApplicationContext.Profiles.FirstOrDefault(p => p.Id == viewProfileId);
    Debug.WriteLine($"Profile: {viewProfileId}");
    var match = false;
    var additionalButton = true;
    var login = Model.HttpContextAccessor.HttpContext?.Session.GetString("name");
    var profile2 = Model.ApplicationContext.Users.FirstOrDefault(u => u.Login == login)?.Profile;
    var profileId = profile2?.Id;
    var showButtons = viewProfileId == profileId && viewProfileId != null;
}
<!DOCTYPE html>
@if (blank != null)
{
    
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
    <link rel="stylesheet" href="~/css/global.css"/>
    <link rel="stylesheet" href="~/css/largeForm.css"/>
    <link rel="stylesheet" href="~/css/view-blank.css"/>
    <title>Blank</title>
</head>
<body>
<div class="wrapper">
    <div class="content">
        <div class="blank">
            <div class="gallery">
                <div class="swiper">
                    <div class="swiper-wrapper">
                        @{
                            //фотки
                            foreach (var photo in blank.Photos)
                            {
                                <div class="swiper-slide">
                                    <img src="@photo.Url" alt=""/>
                                </div>

                            }
                        }
                    </div>
                    <div class="swiper-pagination"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>

                <div class="actions">
                    @if (showButtons)
                    {
                        <button>
                            <img class="action" src="assets/like.svg" alt=""/>
                        </button>
                    }
                    @if (additionalButton)
                    {
                        <form method="get">
                            <input type="submit" asp-page="Profile" asp-route-profileId="@profileId" value="В профиль">
                        </form>
                    }

                    @if (showButtons)
                    {
                        <button>
                            <img class="action" src="assets/dislike.svg" alt=""/>
                        </button>
                    }
                </div>

                @if (match)
                {
                    <div class="match">
                        <h2>Мэтч</h2>
                        <a href="https://sosiska.com">https://sosiska.com</a>
                    </div>
                }
            </div>
            <div class="about">
                <h2>@profile.Name</h2>
                <h4>@profile.Age годиков, @blank.CurrentGender.Name</h4>
                <p>@profile.City.Name</p>
                <p>@blank.Description</p>
                <div>
                    <h4>Цель знакомства</h4>
                    <ul>
                        <li>@blank?.Target?.Name</li>
                    </ul>
                </div>
                <div>
                    <h4>Факты</h4>
                    <ul>
                        @foreach (var fact in blank.Facts)
                        {
                            <li>@fact.Name</li>
                        }
                    </ul>
                </div>
                <div>
                    <h4>Интересы</h4>
                    <ul>
                        @foreach (var interest in blank.Interests)
                        {
                            <li>@interest.Name</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script>
    const swiper = new Swiper('.swiper', {
      // Optional parameters
      // direction: 'vertical',
      loop: true,
      autoHeight: true,
      calculateHeight: true,

      // If we need pagination
      pagination: {
        el: '.swiper-pagination',
      },

      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
  </script>
</html>
}
else
{
    <div>
        Invalid data state
    </div>
}