@page "{handler?}"
@model RMeets.Pages.Login

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/largeForm.css" />
    <title>Login</title>
</head>
<body>
<div class="wrapper">
    <form method="POST">
        <h2>Авторизация</h2>
        <input name="login" placeholder="Логин" required />
        <input name="password" placeholder="Пароль" required />
        <input type="submit" asp-page-handler="PerformLogin" value="Войти" />
        <a asp-page="Register">Создать аккаунт</a>
    </form>
</div>
</body>
</html>